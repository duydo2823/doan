# ios/Podfile
platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# <<< BẮT BUỘC: nạp podhelper.rb của Flutter >>>
require File.expand_path(File.join('..', 'Flutter', 'podhelper'), __FILE__)

# Thiết lập CocoaPods cho Flutter
flutter_ios_podfile_setup

target 'Runner' do
  # Cần cho plugin iOS hiện đại (image_picker_ios, permission_handler_apple, …)
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Cài toàn bộ pods của Flutter & plugins
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Thêm build settings của Flutter vào targets
    flutter_additional_ios_build_settings(target)

    # Đồng bộ iOS minimum
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
